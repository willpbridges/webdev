<div class="row">
  <div class="col-my-2">
    <h1>Events Feed</h1>
    <%= if have_current_user?(@conn) do %>
      <h3>
        <%= link "New Event", to: Routes.post_path(@conn, :new), class: "btn btn-primary" %>
      </h3>
    <% end %>
  </div>
</div>

<div class="row">
  <%= for post <- @posts do %>
    <div class="col-sm-3 card">
      <h3 class="card-header"><%= post.name %></h3>
      <% src = Routes.user_path(@conn, :photo, post.user.id) %>
      <img class="card-img-top" src="<%= src %>" alt="">
      <div class="card-body">
        <h4 class="card-title">Hosted by <%= post.user.name %></h4>
        <br>
        <h5 class="card-text"><%= post.description %></h5>
        <br>
        <%= link "view", to: Routes.post_path(@conn, :show, post), class: "btn btn-secondary" %>
      </div>
      <p class="card-footer">when: <%= post.dateTime %></p>
    </div>
  <% end %>
</div>
